{
  "name": "dev-ops-ui",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "concurrently -n api,web -c blue,green \"npm run server:dev\" \"npm run client:dev\"",
    "client:dev": "vite",
    "server:dev": "tsx watch server/index.ts",
    "build": "tsc -b && vite build",
    "preview": "vite preview",
    "start": "node dist-server/index.js",
    "server:build": "tsx server/index.ts",
    "lint": "eslint src/ server/",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:push": "drizzle-kit push",
    "db:studio": "drizzle-kit studio",
    "flyway:migrate": "docker compose --env-file .env.local run --rm flyway migrate",
    "flyway:info": "docker compose --env-file .env.local run --rm flyway info",
    "flyway:validate": "docker compose --env-file .env.local run --rm flyway validate",
    "flyway:repair": "docker compose --env-file .env.local run --rm flyway repair"
  },
  "dependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/jsonwebtoken": "^9.0.10",
    "bcryptjs": "^3.0.3",
    "cors": "^2.8.5",
    "dotenv": "^17.3.1",
    "drizzle-orm": "^0.45.1",
    "express": "^5.1.0",
    "jsonwebtoken": "^9.0.3",
    "lucide-react": "^0.575.0",
    "postgres": "^3.4.8",
    "react": "19.2.3",
    "react-dom": "19.2.3",
    "react-router-dom": "^7.6.1",
    "uuid": "^13.0.0",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.3",
    "@tailwindcss/postcss": "^4",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.2",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@types/uuid": "^10.0.0",
    "@vitejs/plugin-react": "^4.5.2",
    "concurrently": "^9.1.2",
    "drizzle-kit": "^0.31.9",
    "eslint": "^9.28.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "tailwindcss": "^4",
    "tsx": "^4.19.4",
    "typescript": "^5",
    "typescript-eslint": "^8.34.1",
    "vite": "^6.3.5"
  }
}
